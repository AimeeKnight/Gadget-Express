doctype html
//[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Node Mongo Gadgets
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/css/app.css')
    script(src='/js/vendor/modernizr.js')
  body
    .row
      .small-12.columns
        h1 Node Mongo Gadgets

    .row#forms
      .small-6.columns
        form#user
          fieldset
            legend User Info
            .row
              .small-4.columns
                label Name
                input(type="text", placeholder="name", name="name")#username
              .small-4.columns
                label Balance
                input(type="text", placeholder="balance", name="balance")#balance

                input(type="hidden", name="id")#userid
              .small-4.columns
                button.tiny.radius#save-user Save User

      .small-6.columns
        form#gadget
          fieldset
            legend Gadget Info
            .row
              .small-3.columns
                label Name
                input(type="text", placeholder="name", name="name")#gadgetname
              .small-3.columns
                label Cost
                input(type="text", placeholder="cost", name="cost")#cost
              .small-3.columns
                label Amount
                input(type="text", placeholder="amount", name="amount")#amount

                input(type="hidden", name="id")#gadgetid
              .small-3.columns
                button.tiny.radius#save-gadget Save Gadget

    .row
      .small-4.columns.centered
        table#users
          thead
            tr
              th Name
              th Balance
              th Purchases
          tbody

      .small-8.columns.centered
        table#gadgets
          thead
            tr
              th
              th Name
              th Cost
              th Amount
              th ---
              th ---
              th ---
          tbody

    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/source/main.js')
